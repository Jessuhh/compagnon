generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Swears {
  discordId String
  guildId   String
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([discordId, guildId])
}

model Level {
  discordId String
  guildId   String
  level     Int      @default(0)
  xp        Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([discordId, guildId])
}
